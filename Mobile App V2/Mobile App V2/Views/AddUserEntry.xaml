<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_App_V2.Views.AddUserEntry">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add User Entry"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Family ID"></Entry>
            <Entry Placeholder="Family Member ID"></Entry>
            <Entry Placeholder="Event Entry" />
            <Button Text="Submit" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>